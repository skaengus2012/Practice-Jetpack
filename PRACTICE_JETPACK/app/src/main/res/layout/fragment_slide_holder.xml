<?xml version="1.0" encoding="utf-8"?>
<layout>
	<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#f5141414">

		<FrameLayout
			android:id="@+id/fragmentContainer"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clickable="true"
			android:focusable="true"/>

		<fragment
			android:id="@+id/fragmentSlideControl"
			android:name="nlab.practice.jetpack.ui.slide.SlideControlFragment"
			android:layout_width="match_parent"
			android:layout_height="@dimen/slide_panel_height"
			app:layout_constraintTop_toTopOf="parent"
			tools:layout="@layout/fragment_slide_control"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>